name: "rails3"
runtimes:
  - "ruby18":
      version: "1.8.7"
      executable: "/usr/bin/ruby"
      default: true
      environment:
       rails_env: "production"
       bundle_gemfile:
       rack_env: "production"
       gem_path: "/usr/lib/ruby/gems/1.8"
  - "ruby19":
      version: "1.9.2p180"
      executable: "/home/vmware/bvt/bin/ruby"
      environment:
       rails_env: "production"
       bundle_gemfile:
       rack_env: "production"
       gem_path: "/home/vmware/bvt/lib/ruby/gems/1.9.1"
app_servers:
  - "thin":
      description: "Thin"
      executable: false
      default: true
detection:
  - "config/application.rb": true
  - "config/environment.rb": true
staged_services:
  - "name": "mysql"
    "version": "*"

