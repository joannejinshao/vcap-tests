---
mbus: <%= config.nats_uri %>
local_route: 127.0.0.1
dea_ruby: /home/vmware/bvt/bin/ruby
base_dir:  <%= config.working_dir %>/local/dea
pid: <%= config.working_dir %>/run/dea.pid
filer_port: <%= config.dea_filer_port %>
log_level: DEBUG
multi_tenant: true
max_memory: 4096
secure: false
intervals:
  heartbeat: 10
runtimes:
  ruby18:
    executable: /usr/bin/ruby
    version: 1.8.7
    version_flag: "-e 'puts RUBY_VERSION'"
    additional_checks: "-e 'puts RUBY_PATCHLEVEL >= 174'"
    environment:
      LD_LIBRARY_PATH: '/usr/lib:$LIBRARY_PATH'
  ruby19:
    executable: /home/vmware/bvt/bin/ruby
    version: 1.9.2
    version_flag: "-e 'puts RUBY_VERSION'"
    additional_checks: "-e 'puts RUBY_PATCHLEVEL >= 180'"
    environment:
      LD_LIBRARY_PATH: '/usr/lib:$LIBRARY_PATH'
  node:
    executable: /usr/local/bin/node
    version: 0.4.[2-9]
    version_flag: '-v'
    environment:
      LD_LIBRARY_PATH: '/usr/lib:$LIBRARY_PATH'
  java:
    executable: /usr/bin/java
    version: 1.6.0
    version_flag: '-version'
    environment:
      PATH: /home/vmware/bvt/bin:$PATH
      JAVA_HOME: /usr/lib/jvm/java-6-sun
      LD_LIBRARY_PATH: '/usr/lib:$LIBRARY_PATH'
