---
base_dir:  <%= config.working_dir %>/local/dea
filer_port: <%= config.dea_filer_port %>
mbus: <%= config.nats_uri %>
pid: <%= config.working_dir %>/run/dea.pid
max_memory: 4096
secure: false
multi_tenant: true
log_level: DEBUG
intervals:
  heartbeat: 10

# This is where the execution agent determines its available runtimes.
# version flags are assumed to be '-v' unless noted below.
runtimes:
  ruby18:
    executable: /usr/bin/ruby
    version: 1.8.7
    version_flag: "-e 'puts RUBY_VERSION'"
    additional_checks: "-e 'puts RUBY_PATCHLEVEL >= 174'"
  ruby19:
    executable: ruby
    version: 1.9.2
    version_flag: "-e 'puts RUBY_VERSION'"
    additional_checks: "-e 'puts RUBY_PATCHLEVEL >= 180'"
  java:
    executable: java
    version: 1.6.0
    version_flag: '-version'
