---
name: "sinatra"
runtimes:
  - "ruby18":
      version: "1.8.7"
      executable: "/usr/bin/ruby"
      default: true
      environment:
       rails_env: "production"
       bundle_gemfile:
       rack_env: "production"
       gem_path: "/Library/Ruby/Gems/1.8:$GEM_PATH"
  - "ruby19":
      version: "1.9.2p180"
      executable: "ruby"
      environment:
       rails_env: "production"
       bundle_gemfile:
       rack_env: "production"
app_servers:
  - "thin":
      description: "Thin"
      executable: false # determined during staging
      default: true
detection:
  - "*.rb": "require 'sinatra'|require \"sinatra\"" # .rb files in the root dir containing a require?
  - "config/environment.rb": false # and config/environment.rb must not exist
staged_services:
  - "name": "mysql"
    "version": "*"
  - "name": "redis"
    "version": "2"

