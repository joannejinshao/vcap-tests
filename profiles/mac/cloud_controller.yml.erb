---
rails_environment: production
external_uri: <%= config.controller_host %>
local_route: 127.0.0.1
instance_port: <%= config.controller_port %>
mbus: <%= config.nats_uri %>
local_register_only: false
allow_external_app_uris: false
log_file: <%= config.log_dir %>/cloudcontroller_main.log
directories:
  droplets: <%= config.working_dir %>/shared/droplets
  resources: <%= config.working_dir %>/shared/resources
  staging_manifests: <%= config.manifest_dir %>
  staging_cache: <%= config.platform_cache_dir %>
  tmpdir: <%= config.working_dir %>/tmp
log_level: DEBUG
database_environment:
  production:
    adapter: sqlite3
    database: <%= config.working_dir %>/local/ci.sqlite3
    encoding: utf8
staging:
  max_concurrent_stagers: 10
  max_staging_runtime:    60
keys:
  password: 'acdev-1-password'
  token: 'acdev-1'
pid: <%= config.working_dir %>/run/cloudcontroller.pid
admins: []
default_account_capacity:
  memory:   2048
  app_uris: 4
  services: 16
  apps:     20
builtin_services:
  mysql:
    token: "0xdeadbeef"
  redis:
    token: "0xdeadbeef"
  mongodb:
    token: "0xdeadbeef"

